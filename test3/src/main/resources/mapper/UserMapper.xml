<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chunjae.test3.persitence.UserInfo">

    <select id="userList">
        select * from userinfo desc regdate
    </select>

    <select id="userGet" resultType="com.chunjae.test3.domain.UserInfo">
        select * from userinfo where id=#{id}
    </select>

    <insert id="userInsert">
        insert into userinfo values(default, id=#{id}, pw=#{pw}, name=#{name}, email=#{email}, tel=#{tel}, default, default, default, default, )
    </insert>

    <select id="idCheck" resultType="integer">
        SELECT COUNT(*) FROM member WHERE id=#{id}
    </select>



</mapper>
